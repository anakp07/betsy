
<% if @current_merchant %>
  <section>
    <h3>Order Summary</h3>
    <% if @orders.empty? %>
      <p> You have no orders.</p>
    <%else %>
      <div>
        <% @orders.each do |order| %>
          <table class=" table table-borderless">
            <tr>
              <th>Order Number<strong> <%=link_to order.id,order_path(order) %></strong></th>
              <th>Purchase Date<%= order.created_at.strftime("%m/%d/%y")%></th>
              <th>Order status <%= order.status %></th>
            </tr>
          </table>
        <% end %>
      </div>
    <%end %>
  </section>
<%end %>