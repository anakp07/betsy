<section class="form-section">
  <%= form_with model: @product do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :inventory_stock %>
      <%= f.select :inventory_stock, options_for_select(1..20),
                   {},
                   class:"form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class:"form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :Image %>
      <%= f.text_field :photo_url, :value => "placeholder.jpg",class:"form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :categories %>
      <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :name) %>
    </div>

    <%= f.submit "#{action_name.capitalize} Product", class: "btn btn-success" %>
  <% end %>
</section>