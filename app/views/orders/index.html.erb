<h2>Order Summary:</h2>

<% if @current_merchant %>
  <section>
    <h3>Order history</h3>
    <% if @orders.empty? %>
      <p> You have no orders.</p>
    <%else %>
      <div>
        <% @orders.each do |order| %>
          <table class=" table table-borderless">
            <tr>
              <th>Order Number<strong> <%=link_to order.id,order_path(order) %></strong></th>
              <th>Purchase Date<%=format_datetime(order.created_at)%></th>
              <th>Order status <%= order.status %></th>
            </tr>
          </table>
        <% end %>
      </div>
      <%end %>
      </section>
<%end %>