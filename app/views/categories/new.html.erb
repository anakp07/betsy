<h2>Add a new category</h2>
<%= form_with model: @category do |f| %>
  <section>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Add Category", class: "btn btn-primary" %>
    </div>
  </section>
<% end %>