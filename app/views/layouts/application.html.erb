<!DOCTYPE html>
<html>
  <head>
    <title>Betsy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1>HolyHolly</h1>
      <nav>
        <ul>
          <li>
            <%= link_to "Products", products_path %>
          </li>
          <li>
            <%= link_to "Merchants", merchants_path %>
          </li>
          <li>
            <%= link_to "My account", merchant_path(@current_merchant) %>
          </li>
        </ul>
        <ul>
          <% if @current_merchant %>
            <li><%= link_to "Log out", logout_path, method: :post %></li>
          <% else %>
            <li><%= link_to "Log in with Github", github_login_path %></li>
          <% end %>
        </ul>
      </nav>

    </header>

    <section>
      <div>
        <% flash.each do |name, message| %>
          <%= message %>
        <% end %>
      </div>
    </section>
    <main>
      <%= yield %>
    </main>

    <footer>

    </footer>

  </body>
</html>
