
<% if @current_merchant %>
  <section>
    <h3>Order Summary</h3>
    <% if @orders.empty? %>
      <p> You have no orders.</p>
    <%else %>
      <div>
          <table class=" table table-borderless">
            <tr>
              <th>Order Number</th>
              <th>Purchase Date</th>
              <th>Order status</th>
            </tr>
            <% @orders.each do |order| %>
            <tr>
              <td><strong> <%=link_to order.id,order_path(order) %></strong></td>
              <td><%= order.created_at.strftime("%m/%d/%y")%></td>
              <td><%= order.status %></td>
            </tr>
            <% end %>
          </table>

      </div>
    <%end %>
  </section>
<%end %>